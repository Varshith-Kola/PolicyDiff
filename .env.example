# PolicyDiff Configuration (v2.0)
# Copy this file to .env and fill in your values

# ---- Authentication ----
# Set an API key to enable authentication (recommended for production)
# Leave empty to disable auth (backward-compatible)
API_KEY=
# Secret key for signing bearer tokens (auto-generated if not set)
SECRET_KEY=

# ---- Google OAuth 2.0 (optional) ----
# Enable Google Sign-In for multi-user support
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match the redirect URI in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# ---- OpenAI / LLM ----
# Required for AI-powered plain-language analysis of policy changes
OPENAI_API_KEY=sk-your-openai-api-key-here
# Max concurrent LLM API calls (burst control, default: 3)
LLM_MAX_CONCURRENT=3

# ---- Database ----
# SQLite (default, single-instance):
DATABASE_URL=sqlite:///./data/policydiff.db
# PostgreSQL (production, multi-instance):
# DATABASE_URL=postgresql://user:password@localhost:5432/policydiff

# ---- Email notifications (optional) ----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_FROM_EMAIL=your-email@gmail.com
ALERT_TO_EMAIL=recipient@example.com

# ---- Webhook notifications (optional) ----
# Slack: https://hooks.slack.com/services/T.../B.../...
# Discord: https://discord.com/api/webhooks/.../...
WEBHOOK_URL=

# ---- Scheduling ----
# Base check interval in hours (individual policies can override)
CHECK_INTERVAL_HOURS=24

# ---- Rate Limiting ----
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# ---- App settings ----
APP_HOST=0.0.0.0
APP_PORT=8000
# Comma-separated CORS origins (empty = same-origin only)
CORS_ORIGINS=
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

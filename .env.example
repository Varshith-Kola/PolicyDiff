# PolicyDiff Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for LLM analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database (defaults to SQLite file in ./data/)
DATABASE_URL=sqlite:///./data/policydiff.db

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_FROM_EMAIL=your-email@gmail.com
ALERT_TO_EMAIL=recipient@example.com

# Webhook notifications (Slack, Discord, or any URL â€” optional)
# Slack: https://hooks.slack.com/services/T.../B.../...
# Discord: https://discord.com/api/webhooks/.../...
WEBHOOK_URL=

# Scraping interval in hours (default: 24)
CHECK_INTERVAL_HOURS=24

# App settings
APP_HOST=0.0.0.0
APP_PORT=8000
